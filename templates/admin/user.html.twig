{% extends 'layout.html.twig' %}
{% block layout %}
    <ul>
        <li>Id: {{ user.id }}</li>
        <li>Name: {{ user.name }}</li>
        <li>Username: {{ user.username }}</li>
        <li>Mail: {{ user.email }}</li>
    </ul>

    <img src="{{ user.picture }}" alt="" class="rounded">

    <a href="{{ path('user_delete', {'id': user.id }) }}" class="btn btn-danger">delete</a>
{% endblock %}
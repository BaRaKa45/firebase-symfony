{% extends 'layout.html.twig' %}
{% block layout %}
<table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">Username</th>
        <th scope="col">Mail</th>
        <th scope="col">Roles</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
    <tr>
        <td>{{ user.id }}</td>
        <td><a href="{{ path('user_edit', {'id': user.id }) }}">{{ user.username }}</a></td>
        <td>{{ user.email }}</td>
        <td>{% for role in user.roles %}
                 {{ role }}
            {% endfor %}
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}